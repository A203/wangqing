package com.geminno.arraydemo;

public class Demo3 {

	/**
	 * @param args
	 */
	//定义一个整型数组，求出数组元素的和，数组元素的最大值和最小值并输出所求的结果
	public static void main(String[] args) {
		// TODO Auto-generated method stub
        int[] arr={21,13,91,23,72,78,88};
        int sum=0;
        int max=arr[0];
        int min=arr[0];
        
        for(int i=0;i<arr.length;i++){
        	sum=sum+arr[i];
        	if(arr[i]>max){
        		max=arr[i];
        		continue;
        	}
        	if(arr[i]<min){
        		min=arr[i];
        	}
        }
	}

}
